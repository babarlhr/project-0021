<?xml version="1.0"?>
<odoo>
    <data>
        <record id="wizard_add_material_form_view" model="ir.ui.view">
            <field name="name">wizard.add.material.form</field>
            <field name="model">wizard.add.material</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <form string="Add Material">
                    <group>
                        <field name="product_id"/>
                        <field name="product_qty"/>
                        <field name="product_uom"/>
                    </group>
                     <footer>
                        <button name="add_material" type="object" string="Add Material" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

         <record id="act_add_material" model="ir.actions.act_window">
            <field name="name">Add Material</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.add.material</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="wizard_add_material_form_view"/>
        </record>

        <record id="wizard_return_material_form_view" model="ir.ui.view">
            <field name="name">wizard.return.material.form</field>
            <field name="model">wizard.return.material</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <form string="Return Material">
                    <group>
                        <field name="product_id"/>
                        <field name="quantity"/>
                        <field name="quantity_done"/>
                        <field name="product_qty"/>
                        <field name="product_uom"/>
                    </group>
                     <footer>
                        <button name="return_material" type="object" string="Return Material" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

         <record id="act_return_material" model="ir.actions.act_window">
            <field name="name">Return Material</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.return.material</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="wizard_return_material_form_view"/>
        </record>

    </data>
</odoo>