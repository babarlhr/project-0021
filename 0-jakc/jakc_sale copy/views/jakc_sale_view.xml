<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="jakc_project_0021_sale_order_form_inherit_view">
            <field name="name">jakc.project.0021.sale.order.form.inherit.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='action_cancel']">
                    <button name="open_url_detail" type="object" string="Monitoring"/>
                </xpath>
                <field name="partner_id" position="before">
                    <field name="iface_workorder" attrs="{'invisible':True}"/>
                    <field name="partner_vehicle_id" attrs="{'invisible': [('iface_workorder','=',False)],'required': [('iface_workorder','=',True)]}"/>
                </field>
                <field name="partner_id" position="replace">
                    <field name="partner_id" attrs="{'readonly':[('iface_workorder','=',True)]}" domain="[('customer','=',True)]" context="{'search_default_customer':1, 'show_address': 1}" options='{"always_reload": True}'/>
                </field>
                <field name="partner_id" position="after">
                    <field name="iface_insurance" attrs="{'invisible':[('iface_workorder','=',False)]}"/>
                </field>
                <field name="name" position="after">
                    <field name="sale_order_percentage"/><span>%</span>
                </field>
                <field name="validity_date" position="before">
                    <field name="estimate_finish_date" attrs="{'invisible': [('iface_workorder','=',False)],'required': [('iface_workorder','=',True)]}"/>
                    <field name="surveyor" attrs="{'invisible': [('iface_workorder','=',False)]}"/>
                    <field name="driver_in" attrs="{'invisible': [('iface_workorder','=',False)]}"/>
                    <field name="driver_out" attrs="{'invisible': [('iface_workorder','=',False)]}"/>
                    <field name="distance" attrs="{'invisible': [('iface_workorder','=',False)]}"/>
                </field>
                <field name="payment_term_id" position="after">
                    <field name="printed_num"/>
                </field>

                <xpath expr="//notebook/page[1]" position="after">
                    <page string="Insurance" attrs="{'invisible':[('iface_insurance','=',False)]}">
                        <group>
                            <field name="insurance_company_id" attrs="{'required':[('iface_insurance','=',True)]}"/>
                            <field name="insurance_number" attrs="{'required':[('iface_insurance','=',True)]}"/>
                            <field name="claim_number" attrs="{'required':[('iface_insurance','=',True)]}"/>
                            <field name="claim_date" attrs="{'required':[('iface_insurance','=',True)]}"/>
                            <field name="or_count" attrs="{'required':[('iface_insurance','=',True)]}"/>
                            <field name="or_amount" attrs="{'required':[('iface_insurance','=',True)]}"/>
                        </group>
                    </page>
                    <page string="Images" attrs="{'invisible': [('iface_workorder','=',False)]}">
                        <field name="attachment_ids"  mode="kanban">
                            <kanban>
                                <field name="attachment"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div class="oe_kanban_global_click o_res_partner_kanban o_kanban_record">
                                            <a t-if="!read_only_mode" type="edit" class="fa fa-times pull-right"/>
                                            <div class="o_kanban_workshop_image">
                                                <img t-if="record.attachment.raw_value" t-att-src="'data:image/png;base64,'+record.attachment.raw_value"/>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </page>
                    <page string="Production" attrs="{'invisible': [('iface_workorder','=',False)]}">
                        <field name="production_ids" readonly="1">
                            <tree string="Productions">
                                <field name="name"/>
                                <field name="product_id"/>
                                <field name="routing_wc_line_percentage" widget="progressbar"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Work Center" attrs="{'invisible': [('iface_workorder','=',False)]}" >
                        <field name="workcenter_line_ids">
                            <tree string="Work Center" context="{'group_by': 'production_id'}">
                                <field name="production_id"/>
                                <field name="name"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="jakc_project_0021_sale_order_tree_inherit_view">
            <field name="name">jakc.project.0021.sale.order.tree.inherit.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="partner_vehicle_id" invisible="context.get('iface_workorder') != True"/>
                </field>
                <field name="amount_total" position="after">
                    <field name="sale_order_percentage" widget="progressbar" invisible="context.get('iface_workorder') != True"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="jakc_project_0021_sale_order_filter_inherit_view">
            <field name="name">jakc.project.0021.sale.order.filter.inherit.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="partner_vehicle_id" invisible="context.get('iface_workorder') != True"/>
                </field>
            </field>
        </record>

        <record id="action_workorders" model="ir.actions.act_window">
            <field name="name">Work Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
            <field name="search_view_id" ref="sale.view_sales_order_filter"/>
            <field name="context">{'show_sale': True,'default_iface_workorder': True,'iface_workorder': True}</field>
            <field name="domain">[('iface_workorder','=', True),('state', 'not in', ('sent', 'cancel'))]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a Quotation, the first step of a new sale.
                </p><p>
                    Your next actions should flow efficiently: confirm the Quotation to a Sale Order, then create the Invoice and collect the Payment.
                </p><p>
                    Note that once a Quotation becomes a Sale Order, it will be moved from the Quotations list to the Sales Order list.
                </p>
            </field>
        </record>

        <menuitem action="action_workorders"
            id="menu_workshop_order" parent="base.workshop_workorder_menu"
            sequence="12" groups="base.group_sale_salesman,base.group_sale_manager"/>

         <!-- WORKSHOP/PARTNER VEHICLE -->

        <record model="ir.ui.view" id="view_partner_vehicle_inherit_form">
            <field name="name">Partner Vehicle Inherit</field>
            <field name="model">partner.vehicle</field>
            <field name="inherit_id" ref="jakc_workshop.view_partner_vehicle_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//group" position="after">
                    <notebook>
                        <page string="Work Order">
                            <field name="workorder_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="date_order"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_procurement_order_inherit_form">
            <field name="name">view.procurement.order.inherit.form</field>
            <field name="model">procurement.order</field>
            <field name="inherit_id" ref="procurement.procurement_form_view"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='origin']" position="after">
                     <field name="sale_order_id"/>
                     <field name="partner_vehicle_id"/>
                </xpath>
            </field>
        </record>

         <record model="ir.ui.view" id="view_mrp_production_inherit_tree">
            <field name="name">view.mrp.production.inherit.tree</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='date_planned']" position="after">
                     <field name="sale_order_id"/>
                     <field name="partner_vehicle_id"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_mrp_production_inherit_form">
            <field name="name">view.mrp.production.inherit.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='date_planned']" position="after">
                     <field name="sale_order_id"/>
                     <field name="partner_vehicle_id"/>
                     <field name="routing_wc_line_percentage"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_mrp_production_workcenter_inherit_form">
            <field name="name">view.mrp.production.workcenter.inherit.form</field>
            <field name="model">mrp.production.workcenter.line</field>
            <field name="inherit_id" ref="mrp_operations.mrp_production_workcenter_form_view_inherit"/>
            <field name="type">form</field>
            <field name="arch" type="xml">

                <xpath expr="//header" position="inside">
                    <button name="add_image" string="Add Image" type="object"/>
                    <button name="%(jakc_sale.act_add_operator)d" string="Add Operator" type="action" class="oe_highlight"/>
                </xpath>

                 <xpath expr="//field[@name='workcenter_id']" position="after">
                     <field name="sale_order_id"/>
                     <field name="partner_vehicle_id"/>
                </xpath>

                <notebook position="inside">
                    <page string="Images">
                        <field name="attachment_ids"  mode="kanban">
                            <kanban>
                                <field name="attachment"/>
                                <field name="state"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div class="oe_kanban_global_click o_res_partner_kanban o_kanban_record">
                                            <a t-if="!read_only_mode" type="edit" class="fa fa-times pull-right"/>
                                            <div class="o_kanban_workshop_image">
                                                <img t-if="record.attachment.raw_value" t-att-src="'data:image/png;base64,'+record.attachment.raw_value"/>
                                            </div>
                                        </div>
                                        <span t-esc="record.state"/>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </page>
                    <page string="Operators">
                        <field name="operator_ids">
                            <tree>
                                <field name="operator"/>
                                <field name="workingdate"/>
                            </tree>
                        </field>
                    </page>
                </notebook>

            </field>
        </record>

        <record model="ir.ui.view" id="view_mrp_production_workcenter_inherit_tree">
            <field name="name">view.mrp.production.workcenter.inherit.tree</field>
            <field name="model">mrp.production.workcenter.line</field>
            <field name="inherit_id" ref="mrp_operations.mrp_production_workcenter_tree_view_inherit"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='date_planned']" position="after">
                     <field name="sale_order_id"/>
                     <field name="partner_vehicle_id"/>
                </xpath>
            </field>
        </record>


        <record id="act_so_2_mo" model="ir.actions.act_window">
            <field name="name">Production</field>
            <field name="res_model">mrp.production</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="context">{'search_default_sale_order_id': active_id}</field>
        </record>

        <record id="sale_order_form_buttons" model="ir.ui.view">
            <field name="name">sale.order.form.buttons</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="30"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']/*" position="after">
                    <div class="oe_right oe_button_box" name="buttons">
                        <button class="oe_inline oe_stat_button" type="action"
                                name="%(act_so_2_mo)d"
                                attrs="{'invisible': [('production_count', '=', 0)]}"
                                icon="fa-gears">
                            <field string="Production" name="production_count" widget="statinfo"/>
                        </button>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="mrp_production_sale_info_search_view" model="ir.ui.view">
            <field name="name">mrp.production.sale.info.search</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="partner_id" string="Customer"/>
                    <field name="sale_order_id" string="Sale Order"/>
                    <field name="partner_vehicle_id" string="Vehicle Number"/>
                </field>
                <xpath expr="//search/group/*" position="before">
                    <filter string="Customer" icon="terp-accessories-archiver"
                            domain="[]" context="{'group_by':'partner_id'}"/>
                    <filter string="Sale Order" icon="terp-accessories-archiver"
                            domain="[]" context="{'group_by':'sale_order_id'}"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>